<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/gameLifeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="10sp"
            android:text="@string/placeholder" />

        <TextView
            android:id="@+id/gameLife"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/gameLifeTitle"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="10sp"
            android:text="@string/placeholder" />

        <TextView
            android:id="@+id/gameScoreTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10sp"
            android:text="@string/placeholder" />

        <TextView
            android:id="@+id/gameScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/gameScoreTitle"
            android:layout_marginTop="5sp"
            android:text="@string/placeholder" />

        <TextView
            android:id="@+id/gameTimerTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10sp"
            android:layout_marginRight="10sp"
            android:text="@string/placeholder" />

        <TextView
            android:id="@+id/gameTimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/gameTimerTitle"
            android:layout_marginTop="5sp"
            android:layout_marginRight="10sp"
            android:text="@string/placeholder" />

        <TextView
            android:id="@+id/gameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100sp"
            android:text="@string/placeholder"
            android:textSize="20sp" />

        <Button
            android:id="@+id/gameStartButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50sp"
            android:text="@string/placeholder" />

        <Button
            android:id="@+id/gameQuitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/gameTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50sp"
            android:text="@string/placeholder"
            android:visibility="invisible"/>

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="6"
            android:rowCount="6"
            android:layout_below="@+id/gameTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150sp"
            android:visibility="invisible">

            <!-- 0 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn00"
                style="@style/grid"
                android:layout_row="0"
                android:layout_column="0"
                android:tag="@string/game_tag_00" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn01"
                style="@style/grid"
                android:layout_row="0"
                android:layout_column="1"
                android:tag="@string/game_tag_01" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn02"
                style="@style/grid"
                android:layout_row="0"
                android:layout_column="2"
                android:tag="@string/game_tag_02" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn03"
                style="@style/grid"
                android:layout_row="0"
                android:layout_column="3"
                android:tag="@string/game_tag_03" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn04"
                style="@style/grid"
                android:layout_row="0"
                android:layout_column="4"
                android:tag="@string/game_tag_04" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn05"
                style="@style/grid"
                android:layout_row="0"
                android:layout_column="5"
                android:tag="@string/game_tag_05" />

            <!-- 1 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn10"
                style="@style/grid"
                android:layout_row="1"
                android:layout_column="0"
                android:tag="@string/game_tag_10" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn11"
                style="@style/grid"
                android:layout_row="1"
                android:layout_column="1"
                android:tag="@string/game_tag_11" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn12"
                style="@style/grid"
                android:layout_row="1"
                android:layout_column="2"
                android:tag="@string/game_tag_12" />

